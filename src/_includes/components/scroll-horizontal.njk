<!-- prettier-ignore -->
{% set img_parallax_class = '' %} 
{% if hs_img_parallax %} 
  {% set img_parallax_class = 'scroll-horizontal__figure--parallax' %} 
{% endif %}

<section
  class="scroll-horizontal grid-show"
  data-grid-enter="ripple-out"
  data-grid-exit="ripple-out"
  data-stagger-interval="50"
>
  <div class="scroll-horizontal__pin">
    {% if hs_title %}
    <h2 class="scroll-horizontal__title h5">{{ hs_title }}</h2>
    {% endif %}

    <!-- prettier-ignore -->
    {% if hs_desc %}
    <p class="scroll-horizontal__desc">{{ hs_desc }}</p>
    {% endif %}

    <div class="scroll-horizontal__container">
      <div class="scroll-horizontal__slider">
        <!-- prettier-ignore -->
        {% if hs_imgs %} 
          {% for item in hs_imgs %}
        <figure
          class="figure scroll-horizontal__figure {{ img_parallax_class }}"
        >
          <img src="{{ item.src }}" alt="" />
          <figcaption>
            <h3 class="h6">
              {{ item.title }}
            </h3>
            <p>
              {{ item.desc }}
            </p>
          </figcaption>
        </figure>
        <!-- prettier-ignore -->
        {% endfor %} 
        {% endif %}

        {% if hs_message %}
        <h3 class="scroll-horizontal__message">
          <span
            class="hs-word-1 gsap-animate"
            data-gsap-trigger="scroll-horizontal__pin-step-1"
            data-gsap-markers="true"
            >We</span
          >
          <span class="">are</span>
          <span class="text-stroke">committed</span>
          <span class="">to</span>
          <span class="color--yellow split-chars sh-split-chars-1">
            building
          </span>
          <span class="text-stroke split-chars sh-split-chars-2">
            enjoyable
          </span>
          web
          <span class="icons">
            <span
              class="pin-icon-mobile mask-icon"
              style="mask-image: url('/static/img/icon-google-mobile.svg')"
            ></span>
            <span
              class="pin-icon-desktop mask-icon"
              style="mask-image: url('/static/img/icon-google-desktop.svg')"
            ></span>
          </span>
          experiences
          <span class="color--coral pin-spin__star">âœ¦</span>
        </h3>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="scroll-horizontal__pin-steps pin-steps">
    {% for i in range(1, 8) %}
    <div class="scroll-horizontal__pin-step-{{ loop.index }} pin-step"></div>
    {% endfor %}
  </div>
</section>
