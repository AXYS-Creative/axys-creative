<!-- prettier-ignore -->
{% set title = scroll_horizontal.title or '' %} 
{% set desc = scroll_horizontal.desc or '' %}
{% set message = scroll_horizontal.message or '' %}
{% set imgs = scroll_horizontal.imgs or [] %}
{% set img_parallax = scroll_horizontal.img_parallax or true %}

{% set modifier_class = '' %} 
{% if message %} 
  {% set modifier_class = modifier_class + ' scroll-horizontal--message' %} 
{% endif %}

{% set img_parallax_class = '' %} 
{% if img_parallax %} 
  {% set img_parallax_class = 'scroll-horizontal__figure--parallax' %} 
{% endif %}

<section class="scroll-horizontal {{ modifier_class }}">
  <div class="scroll-horizontal__mobile-container">
    <h2
      class="scroll-horizontal__mobile-container-message split-text"
      data-split-type="words"
      data-split-class="gsap-animate"
    >
      <span class="split-text__word split-text__word1 gsap-animate" aria-hidden="true"> We </span>
      <span class="split-text__word split-text__word2 gsap-animate" aria-hidden="true"> are </span>
      <span class="split-text__word split-text__word3 gsap-animate text-stroke" aria-hidden="true">
        committed
      </span>
      <span class="split-text__word split-text__word3 gsap-animate" aria-hidden="true"> to </span>
      <span class="split-text__word split-text__word4 gsap-animate" aria-hidden="true">
        building
      </span>
      <span class="split-text__word split-text__word5 gsap-animate text-stroke" aria-hidden="true">
        enjoyable
      </span>
      <span class="split-text__word split-text__word6 gsap-animate" aria-hidden="true">web</span>
      <span class="split-text__word split-text__word7 gsap-animate" aria-hidden="true">
        experiences
      </span>
    </h2>
  </div>
  <div class="scroll-horizontal__pin">
    <div class="scroll-horizontal__container">
      <div class="scroll-horizontal__slider gsap-stagger">
        <!-- prettier-ignore -->
        {% if imgs %} 
          {% for img in imgs %}
        <figure
          class="figure scroll-horizontal__figure {{ img_parallax_class }} gsap-stagger-child"
        >
          <img src="{{ img.src }}" alt="" />
          <figcaption class="scroll-horizontal__figure-caption">
            <h3>
              {{ img.title }}
            </h3>
            •
            <small>
              {{ img.desc }}
            </small>
          </figcaption>
        </figure>
        <!-- prettier-ignore -->
        {% endfor %} 
        {% endif %}
  
        {% if message %}
        <h2
          class="scroll-horizontal__message"
          aria-label="We are commited to building enjoyable web experiences."
        >
          <span class="sh-word sh-word-1" aria-hidden="true">We</span>
          <span class="sh-word sh-word-2" aria-hidden="true">are</span>
          <span class="sh-word sh-word-3 text-stroke" aria-hidden="true">committed</span>
          <span class="sh-word sh-word-4" aria-hidden="true">to</span>
          <span
            class="sh-word sh-word-5 split-text color-yellow"
            data-split-type="chars"
            aria-hidden="true"
          >
            building
          </span>
          <span
            class="sh-word sh-word-6 split-text text-stroke"
            data-split-type="chars"
            aria-hidden="true"
          >
            enjoyable
          </span>
          <span class="sh-word sh-word-7" aria-hidden="true">web</span>
          <span class="sh-icons">
            <!-- prettier-ignore -->
            {% set icon_svg = ({ src: '/static/img/icons/icon-google-mobile.svg', class: 'sh-icon-mobile'}) %}
            {% include "../components/icon-svg.njk" %}
            <!-- prettier-ignore -->
            {% set icon_svg = ({ src: '/static/img/icons/icon-google-desktop.svg', class: 'sh-icon-desktop'}) %}
            {% include "../components/icon-svg.njk" %}
          </span>
          <span class="sh-word sh-word-8" aria-hidden="true">experiences</span>
          <span class="sh-icon-star color-coral" aria-hidden="true">✦</span>
        </h2>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="scroll-horizontal__pin-steps pin-steps" aria-hidden="true">
    {% for i in range(0, 8) %}
    <div
      class="scroll-horizontal__pin-step scroll-horizontal__pin-step-{{ loop.index }} pin-step"
      id="scroll-horizontal__pin-step-{{ loop.index }}"
    ></div>
    {% endfor %}
  </div>
</section>
